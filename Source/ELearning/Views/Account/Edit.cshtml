@using BELibrary.Entity
@using BELibrary.Utils
@using ELearning.Handler
@{
    ViewBag.Title = L.T("EditProfie");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = CookiesManage.GetUser();
}
<link href="~/Areas/Admin/lib/plugins/toastr/toastr.min.css" rel="stylesheet" />

<!-- Start main-content -->
<div class="main-content">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/content/images/bg/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">@L.T("EditProfie")</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="/">@L.T("Home")</a></li>
                            <li class="active text-gray-silver">@user.FullName </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Doctor Details -->
    <section class="">
        <div class="container">
            <div class="section-content">
                <div class="row">
                    <div class="col-sx-12 col-sm-4 col-md-4">
                        <div class="doctor-thumb">
                            <img src="@user.LinkAvata" alt="">
                        </div>
                        <div class="info p-20 bg-black-333">
                            <h4 class="text-uppercase text-white">@user.FullName</h4>
                            <ul class="list angle-double-right m-0">
                                <li class="mt-0 text-gray-silver"><strong class="text-gray-lighter">Email</strong><br> @user.Email</li>
                                <li class="text-gray-silver"><strong class="text-gray-lighter">Phone</strong><br> @user.Phone</li>
                            </ul>
                            <ul class="styled-icons icon-gray icon-circled icon-sm mt-15 mb-15">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-skype"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                            <a class="btn btn-danger btn-flat mt-10 mb-sm-30" href="/account/logout">@L.T("Logout")</a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8">
                        <form name="reg-form" class="register-form" method="post" id="frmEdit">
                            <div class="icon-box mb-0 p-0">
                                <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                                    <i class="pe-7s-users"></i>
                                </a>
                                <h4 class="text-gray pt-10 mt-0 mb-30">@L.T("EditProfie")</h4>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="form_name">@L.T("Name")</label>
                                    <input name="FullName" class="form-control" type="text" required value="@user.FullName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="form_gender">@L.T("Gender")</label>
                                    <select name="Gender" class="form-control" required value="@user.Gender.ToString()">
                                        <option>----@L.T("SelectGender")----</option>
                                        <option value="True" @(user.Gender == GenderKey.Male ? "selected" : "")>@L.T("Male")</option>
                                        <option value="False" @(user.Gender == GenderKey.FeMale ? "selected" : "")>@L.T("Female")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="form_choose_username">@L.T("Username")</label>
                                    <input id="form_choose_username" name="Username" class="form-control" type="text" required disabled value="@user.Username">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="form_chooseDateOfBirth">@L.T("BirthDay")</label>
                                    <input id="form_choose_DateOfBirth" name="DateOfBirth" class="form-control" type="date" required value="@user.DateOfBirth.ToString("yyyy-MM-dd")">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>@L.T("EmailAddress")</label>
                                    <input name="Email" class="form-control" type="email" required value="@user.Email">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>@L.T("Phone")</label>
                                    <input name="Phone" class="form-control" type="text" value="@user.Phone">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="exampleInputFile">Ảnh đại diện</label>
                                    <input type="file" id="file" name="avatarUpload">
                                    <p class="help-block">Example block-level help text here.</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-dark btn-lg btn-block mt-15" type="submit" id="btnReg">@L.T("Update")</button>
                            </div>
                        </form>

                        <hr class="mt-70 mb-70">

                        <form name="editprofile-form" method="post" id="updatePass">
                            <div class="icon-box mb-0 p-0">
                                <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                                    <i class="fa fa-key"></i>
                                </a>
                                <h4 class="text-gray pt-10 mt-0 mb-30">Change Password</h4>
                            </div>
                            <hr>
                            <p class="text-gray">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Excepturi id perspiciatis facilis nulla possimus quasi, amet qui. Ea rerum officia, aspernatur nulla neque nesciunt alias.</p>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Choose Password</label>
                                    <input name="NewPassword" class="form-control" type="password">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Re-enter Password</label>
                                    <input name="RePassword" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Old Password</label>
                                    <input name="OldPassword" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-dark btn-lg mt-15" type="submit">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->
@section Scripts {
    <script src="~/Areas/Admin/lib/plugins/toastr/toastr.min.js"></script>
    <script src="~/Scripts/edit.account.js"></script>
}